<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cita.NuevoCitaFragment">

    <Spinner
        android:id="@+id/spiDoctor"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="488dp"
        android:backgroundTint="#EC407A"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spiEnfermedad"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spiPaciente"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="488dp"
        android:backgroundTint="#EC407A"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spiEnfermedad"
        app:layout_constraintVertical_bias="0.282" />

    <Spinner
        android:id="@+id/spiEnfermedad"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="608dp"
        android:backgroundTint="#EC407A"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtConsultorio"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Consultorio"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spiDoctor"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/edtDomicilioc"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Domicilio"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtConsultorio"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:background="@android:drawable/editbox_background"
        android:cursorVisible="false"
        android:focusable="false"
        android:inputType="none"
        android:onClick="showDateTimePicker"
        android:ems="10"
        android:hint="Fecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDomicilioc"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nuevo_cita"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC407A"
        android:text="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783" />

</androidx.constraintlayout.widget.ConstraintLayout>